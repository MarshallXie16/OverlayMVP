{
  "name": "workflow-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "extension",
    "dashboard"
  ],
  "scripts": {
    "dev:extension": "npm run dev --workspace=extension",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "build:extension": "npm run build --workspace=extension",
    "build:dashboard": "npm run build --workspace=dashboard",
    "install:all": "npm install && cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
